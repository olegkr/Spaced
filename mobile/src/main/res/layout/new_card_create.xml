<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eT_new_deck_name"
        android:hint="@string/name_your_deck" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_a_photo"
        android:id="@+id/tv_add_foto_new_deck" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/spaced_gallery"
                android:id="@+id/btn_spaced_gallery"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/phone_gallery"
                android:id="@+id/btn_phone_gallery"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/take_a_photo"
                android:id="@+id/btn_take_photo"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imVw_new_deck" />
        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:id="@+id/btn_cancel_new_deck"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_marginRight="100dp"
                android:background="@android:color/transparent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create"
                android:id="@+id/btn_create_new_deck"
                android:gravity="center"
                android:layout_gravity="right"
                android:background="@android:color/transparent" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>