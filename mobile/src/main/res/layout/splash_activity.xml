<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/Title"
        android:text="SPACED"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="sans" />

    <TextView
        android:id="@+id/SubTitle"
        android:text="The most amazing \nSPACED REPETITION \napp in the world"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="190dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="sans" />


    <ImageView
        android:id="@+id/firstCloud"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="20dp"
        android:src="@drawable/cloud4_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/secondCloud"
        android:layout_gravity="right"
        android:layout_marginTop="300dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/cloud3_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/thirdsCloud"
        android:layout_gravity="left"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/cloud2_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/continueButton"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="30dp"
        android:src="@drawable/knopka_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</FrameLayout>